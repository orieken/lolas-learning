{
  "name": "lolas-learning",
  "private": true,
  "version": "0.0.0",
  "description": "Monorepo for Lola's Learning (Shell + Games + Packages)",
  "license": "MIT",
  "scripts": {
    "lint": "eslint .",
    "format": "prettier -w .",
    "typecheck": "tsc -v > /dev/null && echo TypeScript OK",
    "test": "vitest run",
    "e2e": "pnpm install && playwright install --with-deps && pnpm --filter @lolas/core-sdk build && pnpm --filter @lolas/ui-kit build && playwright test",
    "build": "echo building workspace root",
    "mf": "node ./tools/mf.mjs",
    "mf:start": "node ./tools/mf.mjs start",
    "mf:new": "node ./tools/mf-scaffold.mjs",
    "dev": "node ./tools/mf.mjs start",
    "dev:shell": "pnpm --filter @lolas/shell dev",
    "dev:game:number-detective": "pnpm --filter @lolas/game-number-detective dev"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.3",
    "typescript": "^5.5.4",
    "vitest": "^1.6.0",
    "@vitest/coverage-v8": "^1.6.0",
    "@playwright/test": "^1.47.2",
    "@axe-core/playwright": "^4.10.0",
    "dotenv": "^16.4.5",
    "tailwindcss": "^3.4.10",
    "postcss": "^8.4.45",
    "autoprefixer": "^10.4.20"
  },
  "packageManager": "pnpm@8.15.8"
}
