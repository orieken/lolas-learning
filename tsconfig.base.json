{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmitOnError": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["ES2022", "DOM"],
    "types": [],
    "baseUrl": ".",
    "paths": {
      "@lolas/core-sdk": ["packages/core-sdk/src"]
    }
  }
}

